
<div class="adding_tasks">
  
    <h1>Add a new task</h1>

    <%= form_for @task do |f| %>

      <p>Task name: <%= f.text_field :name %></p>
  
      <p>Deadline (YYYY-MM-DD): <%= f.text_field :deadline%></p>
  
      <%= f.submit %>
  
    <% end %>
       
  </div>
  
<div class="users_tasks">
<% if @tasks == nil %>
  
    <p>"You have no tasks."</p>

  <% else %>
        

    <h1>Show detail page for <%= @tasks.name %></h1>

    <p>Task name: <%= @tasks.name %></p>

    <% if @tasks.project == nil %>
  
          <p>Not assigned to a project</p>
  
        <% else %>

          <p>Assigned to Project: <%= @tasks.project.name %></p>
  
        <% end %>

        <% if @tasks.users == [] %>

          <p>Not assigned to a user</p>
  
        <% else %>

          <p>Assigned to: <% @tasks.users.each do |u| %>
                   <%= u.name %></p>
                 <% end %>
  
        <% end %>

        <p>Deadline: <%= @tasks.deadline %></p>

        <p><%= @tasks.completed.capitalize %></p>

        <% @tasks.categories.each do |cat| %>

            <p><%= link_to(cat.name, category_path(cat.id)) %></p>
	
        <% end %>
      <%end%>
     
</div>


            
    
  
      
             
 
             
 
 
             
 
