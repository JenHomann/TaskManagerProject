<h1>Edit Category</h1>
<% if @category %>
	<%= form_for @category do |f| %>
	
	  <p>
	    <%= f.label :name %>
	    <%= f.text_field :name %>
	  </p>
	  
	  <p>
	    <%= f.label :description %>
	    <%= f.text_field :description %>
	  </p>
	  
	  <%= f.submit %>
	
	<% end %>
<% else %>
	<p>There is nothing here.</p>
<%end%>

<p><%= link_to('Home', root_path) %></p>

