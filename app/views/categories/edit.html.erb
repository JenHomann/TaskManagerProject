<h1>Edit Category</h1>

<%= form_for @category do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  
  <p>Assign task to Category:</p>
  <p>Task: <%#= f.collection_select(:task_id, @tasks, :id, :name )%></p>

  
  <%= f.submit %>

<% end %>
