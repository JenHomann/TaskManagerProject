<h1>Add a new task</h1>

<% @task.errors.full_messages.each do |msg| %>

  <p><%= msg %></p>
  
<% end %>

<%= form_for @task do |f| %>

  <p>Task name: <%= f.text_field :name %></p>
  
  <p>Deadline (YYYY-MM-DD): <%= f.text_field :deadline%></p>
  
  <%= f.submit %>
  
<% end %>

<p><%= link_to('Home', root_path) %></p>