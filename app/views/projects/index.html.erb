<h1>All Projects</h1>

<table>
  <tr>
    <td>Project Name</td>
    <td>Deadline</td>
    <td>Status</td>
    <td>Description</td>
	
  <% @projects.each do |project| %>
  
  <tr>
    <td><%= link_to(project.name, project_path(project)) %></td>
    <td><%= project.deadline %></td>
    <td><%= project.completed.capitalize %></td>
    <td><%= project.description %></td>
    <td><%= link_to("Edit", edit_project_path(project))%></td>
    <td><%= link_to("Delete", project_path(project), :method => :delete, data: {confirm: 'Are you sure you want to delete ' + project.name + '?' })%>
  </tr>
  
  <% end %>
  
</table>
