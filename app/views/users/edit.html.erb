<h1>Edit</h1>
<%= @user.id %>
<%= form_for @user do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <%= f.submit %>
  
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
  
<% end %>
  
  