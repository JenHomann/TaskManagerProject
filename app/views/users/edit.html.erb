<h1>Edit</h1>

<%= form_for @user, :method => :create do |u| %>

  <p>
    <%= u.label :name %>
    <%= u.text_field :name %>
  </p>
  <p>
    <%= u.label :email %>
    <%= u.text_field :email %>
  </p>
  
  <p>
    <%= u.label :password %>
    <%= u.password_field :password %>
  </p>
  
  <p>
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation %>
  </p>
  
  <%= u.submit %>
  
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
  
  <% end %>
  
  